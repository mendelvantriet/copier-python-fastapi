[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
description = "{{ project_description }}"
requires-python = ">= 3.8"
dynamic = ["version"]

dependencies = [
    "fastapi ~= 0.123.10",
]

[tool.setuptools_scm]
version_file = "{{ project_name }}/_version.py"

[project.optional-dependencies]
dev = [
    "black",
    "isort",
    "pip-tools",
    "pytest",
]
