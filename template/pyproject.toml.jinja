[build-system]
requires = ["setuptools", "setuptools-scm"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
description = "{{ project_description }}"
requires-python = ">= 3.9"
dynamic = ["version"]

dependencies = [
    "fastapi ~= 0.123.10",
    "pydantic ~= 2.12.5",
    {% if sqlalchemy %}"sqlalchemy ~= 2.0.45",{% endif %}
    {% if storage_backend == "sqlite" %}"sqlalchemy[aiosqlite] ~= 2.0.45",{% endif %}
    "uvicorn ~= 0.38.0",
]

[tool.setuptools_scm]
version_file = "{{ project_name }}/_version.py"

[project.optional-dependencies]
dev = [
    "black",
    "isort",
    "pip-tools",
    "pytest",
]
